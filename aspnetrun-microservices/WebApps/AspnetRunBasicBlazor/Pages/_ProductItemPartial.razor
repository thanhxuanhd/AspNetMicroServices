@if (Model != null)
{
    <div class="card">
        <NavLink href="@($"/ProductDetail/{Model.Id}")">
            <img asp-append-version="true" class="card-img-top" src="/images/product/@Model.ImageFile" alt="" />
        </NavLink>
        <div class="card-body">
            <h4 class="card-title">
                <NavLink href="@($"/ProductDetail/{Model.Id}")">
                    <a asp-page="ProductDetail" asp-route-productId="@Model.Id" class="color-main">@Model.Name</a>
                </NavLink>
            </h4>
            <p class="card-text">@Model.Summary</p>
            <div class="row">
                <div class="col">
                    <p class="btn btn-danger btn-block">@Model.Price $</p>
                </div>
                <div class="col-12">

                    @*<a asp-page="Cart" asp-route-productId="@Model.Id" class="btn btn-success btn-block">Add to Cart</a>*@

                    <form asp-page-handler="AddToCart" method="post" name="addToCartForm" id="add_cart_form">
                        <a href="javascript:;" onclick="parentNode.submit();" class="btn btn-success btn-block">Add to Cart</a>
                        <input type="hidden" asp-for="@Model.Id" name="productId" />
                    </form>

                </div>
            </div>
        </div>
    </div>
}
@code {
    [Parameter]
    public CatalogModel Model { get; set; }
}
